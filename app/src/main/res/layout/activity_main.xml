<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ahmad.ef.workhours.MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnSetStartTime"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="@string/setStartTime" />

        <TextView
            android:id="@+id/txtStartTime"
            android:text="@string/startTime"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnSetEndTime"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="@string/setEndTime" />

        <TextView
            android:id="@+id/txtEndTime"
            android:text="@string/endTime"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/btnAddToDb"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/addToDatabase" />

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
